<div class="container">    
    {{#if loggedIn}}
        <h1>Hi {{name}}!</h1>
        <form action="/wallpaper" method="POST">
            <input type="text" name="image" id="image" placeholder="enter url">
            <input type="submit" class="button" value="Save background">
        </form>
        <a href="/logout" class="button">Logout</a>
    {{else}}
        <a href="/login" class="button">Log in with Facebook</a>
    {{/if}}
</div>