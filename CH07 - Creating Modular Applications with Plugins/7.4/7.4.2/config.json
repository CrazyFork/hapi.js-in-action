{
    "server": {
        "app": {
            "appName": "pingoo flight tracking"
        },
        "debug": {
            "$filter": "env",
            "$base": {
                "request": ["error"]
            },
            "$default": {
                "log": ["error", "connection", "client"]
            },
            "production": {
                "log": ["error"]
            }
        }
    },
    "connections": {
        "$filter": "env",
        "production": [
            { "port": 80 }
        ],
        "$default": [
            { "port": 4000 }
        ]
    },
    "registrations": [
        {
            "plugin": {
                "register": "./plugins/database",
                "options": {
                    "dbName": "pingoo",
                    "dbTable": "pings"
                }
            }
        },
        { "plugin": "./plugins/portal" },
        { "plugin": "./plugins/receive" },
        { "plugin": "vision" }
    ]
}
